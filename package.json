{
    "name": "jq-playground",
    "displayName": "jq Playground",
    "description": "Live preview of jq filter output",
    "version": "0.2.0",
    "publisher": "maargenton",
    "repository": {
        "type": "git",
        "url": "https://github.com/maargenton/vscode-jq-playground"
    },
    "keywords": [
        "jq",
        "json",
        "filter",
        "query",
        "preview",
        "playground"
    ],
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "content/icon-128c.png",
    "activationEvents": [
        "onLanguage:jq"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "jqPlayground.openPreview",
                "title": "Open jq Preview",
                "icon": "$(play)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "jqPlayground.openPreview",
                    "when": "resourceExtname == .jq",
                    "group": "navigation"
                }
            ]
        },
        "languages": [
            {
                "id": "jq",
                "aliases": [
                    "jq",
                    "JQ"
                ],
                "extensions": [
                    ".jq"
                ],
                "configuration": "./language-configuration.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "bundle": "npx vsce package",
        "install": "npx vsce package && code --install-extension $(ls *.vsix | sort | tail -n 1)"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "node-jq": "^2.3.3"
    }
}
